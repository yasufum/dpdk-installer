syntax on
set number
set showcmd
set showmatch
set hlsearch
set encoding=utf-8
set fileencoding=utf-8
set termencoding=utf-8
set autoindent

set visualbell t_vb=
set noerrorbells

"colorscheme darkblue

" Cancel auto comment out
autocmd FileType * setlocal formatoptions-=ro

" Show multiple candidates of tags
nnoremap <C-]> g<C-]>

"dein Scripts-----------------------------
if &compatible
  set nocompatible               " Be iMproved
endif

" Required:
set runtimepath+={{ dein_home }}/repos/github.com/Shougo/dein.vim

" Required:
if dein#load_state('{{ dein_home }}')
  call dein#begin('{{ dein_home }}')

  " Let dein manage dein
  " Required:
  call dein#add('{{ dein_home }}/repos/github.com/Shougo/dein.vim')

  " Add or remove your plugins here:
  call dein#add('Shougo/neosnippet.vim')
  call dein#add('Shougo/neosnippet-snippets')

  " You can specify revision/branch/tag.
  "call dein#add('Shougo/deol.nvim', { 'rev': 'a1b5108fd' })

  " Required:
  call dein#end()
  call dein#save_state()
endif

" Required:
filetype plugin indent on
syntax enable

